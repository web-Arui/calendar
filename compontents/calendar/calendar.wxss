.choice .view{
  /* flex: 1; */
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  background: #88a1fd;
  background-position:center;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: bian 0.16s;
}
@keyframes bian{
  0%{
    transform: scale(0);
  }
  70%{
    transform: scale(1);
  }
  90%{
    transform: scale(0.9);
  }
  100%{
    transform: scale(1);
  }
}
